<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >


		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="180dp"
			android:orientation="horizontal" >

			<Button
				android:id="@+id/barcode"
				android:layout_width="180dp"
				android:layout_height="180dp"
				android:background="@drawable/barcode_btn"
				android:enabled="true"
				android:textColor="#FFFFFF"
				android:textSize="18.42dp"
				/>

			<View android:layout_width="10dp" android:layout_height="3dp" />
			<Button
				android:id="@+id/read_memory"
				android:layout_width="180dp"
				android:layout_height="180dp"
				android:background="@drawable/read_memory_btn"
				android:enabled="true"
				android:textColor="#FFFFFF"
				android:textSize="18.42dp"
				/>
		</LinearLayout>

		<View android:layout_width="10dp" android:layout_height="10dp" />

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="180dp"
			android:orientation="horizontal" >

			<Button
				android:id="@+id/write_memory"
				android:layout_width="180dp"
				android:layout_height="180dp"
				android:background="@drawable/write_memory_btn"
				android:enabled="true"
				android:textColor="#FFFFFF"
				android:textSize="18.42dp"
				/>

			<View android:layout_width="10dp" android:layout_height="3dp" />
			<Button
				android:id="@+id/inventory"
				android:layout_width="180dp"
				android:layout_height="180dp"
				android:background="@drawable/inventory_btn"
				android:enabled="true"
				android:textColor="#FFFFFF"
				android:textSize="18.42dp"
				/>
		</LinearLayout>

		<View android:layout_width="10dp" android:layout_height="10dp" />

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="180dp"
			android:orientation="horizontal" >

			<Button
				android:id="@+id/lock_memory"
				android:layout_width="180dp"
				android:layout_height="180dp"
				android:background="@drawable/lock_memory_btn"
				android:enabled="true"
				android:textColor="#FFFFFF"
				android:textSize="18.42dp"
				/>

			<View android:layout_width="10dp" android:layout_height="3dp" />
			<Button
				android:id="@+id/option"
				android:layout_width="180dp"
				android:layout_height="180dp"
				android:background="@drawable/option_btn"
				android:enabled="true"
				android:textColor="#FFFFFF"
				android:textSize="18.42dp"
				/>
		</LinearLayout>

		<View android:layout_width="10dp" android:layout_height="10dp" />

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="83dp"
			android:gravity="bottom"
			android:orientation="horizontal">

			<ImageView
				android:id="@+id/app_logo"
				android:layout_width="180dp"
				android:layout_height="67dp"
				android:layout_gravity="bottom"
				android:contentDescription="@string/logo"
				android:src="@drawable/hoban_rfid_scan_logo" />

			<View
				android:layout_width="10dp"
				android:layout_height="3dp" />


			<LinearLayout
				android:layout_width="180dp"
				android:layout_height="wrap_content"
				android:layout_gravity="bottom"
				android:orientation="vertical">

				<!-- Demo Version -->
				<TextView
					android:layout_width="180dp"
					android:layout_height="18.24dp"
					android:layout_gravity="bottom"
					android:text="@string/demo_version"
					android:textAlignment="textEnd"
					android:textColor="#222222"
					android:textStyle="bold" />

				<TextView
					android:textColor="#7f7f7f"
					android:id="@+id/demo_version"
					android:layout_width="180dp"
					android:layout_height="18.24dp"
					android:layout_gravity="bottom"
					android:textAlignment="textEnd" />

				<View
					android:layout_width="10dp"
					android:layout_height="10dp" />
				<!-- Firmware Version -->
				<TextView
					android:layout_width="180dp"
					android:layout_height="18.24dp"
					android:layout_gravity="bottom"
					android:text="@string/firmware_version"
					android:textAlignment="textEnd"
					android:textColor="#222222"
					android:textStyle="bold" />

				<TextView
					android:textColor="#7f7f7f"
					android:id="@+id/firmware_version"
					android:layout_width="180dp"
					android:layout_height="18.24dp"
					android:layout_gravity="bottom"
					android:textAlignment="textEnd" />

			</LinearLayout>


		</LinearLayout>
	</LinearLayout>
    <!-- Logo -->

</LinearLayout>
